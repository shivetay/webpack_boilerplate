{
  "name": "webpack_boiler",
  "version": "1.0.0",
  "description": "webpack_boilerplate",
  "main": "index.js",
  "scripts": {
    "init": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp src src/assets src/styles",
    "init:files": "touch README.md src/index.html src/index.js src/styles/main.scss webpack.common.js webpack.dev.js webpack.prod.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "init:gitignore:custom": "echo \"dist\" >> .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shivetay/webpack_boilerplate.git"
  },
  "keywords": [
    "webpack"
  ],
  "author": "LD",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shivetay/webpack_boilerplate/issues"
  },
  "homepage": "https://github.com/shivetay/webpack_boilerplate#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.1",
    "mini-css-extract-plugin": "^1.3.3",
    "node-sass": "^5.0.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "clean-webpack-plugin": "^3.0.0"
  }
